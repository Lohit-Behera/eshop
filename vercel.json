{
    "builds": [
        {
            "src": "backend/manage.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "frontend",
            "use": "@vercel/static-build",
            "config": { "zeroConfig": true }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/wsgi.py"
        }
    ]
}